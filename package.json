{
  "name": "@bpanel/bpanel-ui",
  "version": "0.0.14",
  "description": "reusable React component library used in the bpanel GUI",
  "main": "dist/index.js",
  "scripts": {
    "babel": "babel src -d dist",
    "clean": "rm -rf dist/*",
    "watch": "cross-env NODE_ENV=development webpack -w",
    "build:dev": "cross-env NODE_ENV=development webpack",
    "build:production": "cross-env NODE_ENV=production webpack -p",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src || exit 0",
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,jsx,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bpanel-org/bpanel-ui.git"
  },
  "keywords": [
    "react",
    "ui",
    "GUI",
    "bcoin",
    "bitcoin"
  ],
  "author": "bcoin",
  "license": "ISC",
  "dependencies": {
    "bsert": "0.0.4",
    "font-awesome": "^4.7.0",
    "keymirror": "^0.1.1",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "prop-types": "^15.6.0",
    "react-qr": "0.0.2",
    "react-select": "^2.0.0",
    "react-virtualized": "^9.13.0"
  },
  "peerDependencies": {
    "@bpanel/bpanel-utils": "0.0.11",
    "react": "^16.3.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.1.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "prettier": "1.7.4",
    "source-map-loader": "^0.2.2",
    "style-loader": "^0.19.0",
    "url-loader": "^1.0.1",
    "webpack": "^3.8.1"
  }
}
